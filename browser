import socket
import threading

def handle_client(client_socket, target_host, target_port):
    # Connect to the target server
    target_socket = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
    target_socket.connect((target_host, target_port))

    # Receive data from the client and forward it to the target server
    while True:
        data = client_socket.recv(4096)
        if not data:
            break
        target_socket.send(data)

    # Receive data from the target server and forward it to the client
    while True:
        data = target_socket.recv(4096)
        if not data:
            break
        client_socket.send(data)

    # Close the sockets
    client_socket.close()
    target_socket.close()

def proxy_server(bind_host, bind_port, target_host, target_port):
    # Create a listening socket
    server = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
    server.bind((bind_host, bind_port))
    server.listen(5)

    print(f'[*] Listening on {bind_host}:{bind_port}')

    while True:
        client_socket, addr = server.accept()
        print(f'[*] Accepted connection from {addr[0]}:{addr[1]}')

        # Create a thread to handle the client
        client_thread = threading.Thread(
            target=handle_client,
            args=(client_socket, target_host, target_port)
        )
        client_thread.start()

def main():
    # Define proxy settings
    bind_host = '127.0.0.1'  # Localhost
    bind_port = 8888  # Choose a port number
    target_host = 'www.google.com'  # Target server
    target_port = 80  # HTTP port

    # Start the proxy server
    proxy_server(bind_host, bind_port, target_host, target_port)

if __name__ == '__main__':
    main()
